{
    "context": {
        "current_version": "0.1.0"
    },
    "operations": [
        {
            "path": "source/**/_version.py",
            "search": "__version__ = \"{current_version}\"",
            "replace": "__version__ = \"{next_version}\""
        },
        {
            "path": "doc/release/release_notes.rst",
            "search": ".. release:: Upcoming",
            "replace": ".. release:: {next_version}\n    :date: {now:%Y-%m-%d}"
        }
    ]
}
